
@{
    ViewBag.Title = "Index";
}

<h2>Kategorie produktů</h2>

<table id="productCategories" class="table table-striped table-bordered"></table>


@section scripts
{
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs/dt-1.10.15/b-1.4.0/b-colvis-1.4.0/datatables.js"></script>

    <script>
        $.getJSON("/api/ProductCategories/forTable", function (json) {
            $(document).ready(function () {

                // format like columns: [{ "title": "name"}, { "title": "country"}]
                // format like data: [["John Doe","Fresno"],["Billy","Fresno"],["Tom","Kern"],["King Smith","Kings"]]}]

                $('#productCategories').DataTable({
                    data: json["data"],
                    columns: json["columns"],
                    searching: false,
                    paging: false,
                    ordering: false,
                    info: false
                });
            });
        });
    </script>
}

